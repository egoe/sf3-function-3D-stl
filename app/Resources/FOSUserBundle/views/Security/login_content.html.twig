<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
  {% if csrf_token %}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}

  <div class="form-group">
    <h3 class="text-center">login</h3>
  </div>

  <div class="form-group">
    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeHolder="Nom d'utilisateur" />
  </div>

  <div class="form-group">
    <input class="form-control" type="password" id="password" name="_password" required="required" placeHolder="Mot de passe" />
  </div>

  <div class="form-group">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Se souvenir de moi</label>
  </div>

  <div class="form-group">
    <input class="btn btn-info btn-block btn-lg" type="submit" id="_submit" name="_submit" value="S'identifier" />
  </div>
</form>